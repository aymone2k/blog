{% extends "layout.twig" %}

{% block body %}
    
    <h1> Login </h1>
    {% if errorForm %}
  <p class="text-danger">Pas de compte? <a href="/users/signup">clique ici pr créer un cpte</a> </p>
  <ul class='errors'>
    {% for error in errorForm %}
 
      {% if error.username %}
        <li>{{error.username.message}}</li>
      {% endif %}
            {% if error.password %}
        <li>{{error.password.message}}</li>
      {% endif %}
     
    {% endfor %}
  </ul> 
{% endif %}
<form class="row g-3" action='' method='POST'>
  <div class=" form-group">
    <label for="staticEmail2" class="">username</label>
    <input type="text"  class="form-control" id="username" value="" name="username">
  </div>
  <div class=" form-group">
    <label for="inputPassword2" class="">Password</label>
    <input type="password" value="" class="form-control" id="password" placeholder="Password" name='password'>
  </div>
 <p class="text-danger">Vous avez oublié votre mot de passe ? <a href="/users/forgotPassword">clique ici pr le reinitialiser</a> </p>
    <button type="submit" class="btn btn-primary mb-3">Login</button>
 
</form>


{% endblock %}