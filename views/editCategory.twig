{% extends "layout.twig" %}

{% block body %}

<h2>Modifier une Catégorie </h2>
{% if errorForm %}
  <p class="text-danger">il ya une erreur de saisie </p>
  <ul class='errors'>
    {% for error in errorForm %}
  
      {% if error.title %}
        <li>{{error.title.message}}</li>
      {% endif %}
      {% if error.description %}
        <li>{{error.description.message}}</li>
      {% endif %}
    
    {% endfor %} 
  </ul> 
{% endif %}
<form action=" " method="POST" >

 <div class="form-group">
 
    <h6>Catégorie: {{category.title}}</h6>
    <hr>
 
    <label for="exampleInputName" class="form-label">Modifier le nom de la categorie:</label>
    <input type="text" class="form-control" id="title" name="title" value="{{category.title}}">
     </div>
 
 <div class="form-group">
 
    <h6>Description: {{category.description}}</h6>
    <hr>
 
    <label for="exampleInputContent" class="form-label">Modifier la description de la categorie</label>
  
      <textarea class="form-control" name="description" id="description" rows="3" >{{category.description | raw}}</textarea>

  </div>

  <button type="submit" class="btn btn-primary">modifier une categorie</button>
</form>
<div>

</div>

{% endblock %}